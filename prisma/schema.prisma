generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @unique @default(uuid())
  name         String
  password     String
  refreshToken String?
  createdAt    DateTime   @default(now())
  exhibits     Exhibits[]
}

model Exhibits {
  id          String   @id @unique @default(uuid())
  description String
  image       String
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}
